<Page
    x:Class="Notes.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Notes"
    xmlns:viewModels="using:ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="RoyalBlue">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Grid.Row="0" Orientation="Vertical" Background="Black">
            <Button x:ConnectionId='4' Content="Home"                  Margin="5" Background="BlueViolet"/>
        </StackPanel>

        <StackPanel Grid.Column="1" Grid.Row="0" Orientation="Vertical" Background="Black">
            <TextBox x:ConnectionId='3' Name="Title" Text="asd" Background="Blue" IsReadOnly="True" Foreground="Black" HorizontalAlignment="Center"></TextBox>
        </StackPanel>

        <StackPanel Grid.Column="2" Grid.Row="0" Orientation="Vertical" Background="Black">
            <Button x:ConnectionId='2' Content="Add"                   Margin="5" HorizontalAlignment="Right" Background="BlueViolet"/>
        </StackPanel>

        <StackPanel Grid.Column="0" Grid.Row="1" Orientation="Vertical" >
            <Frame x:ConnectionId='1' x:Name="MainFrame" Margin="0,35,0,0">
            </Frame>
        </StackPanel>
    </Grid>
</Page>

